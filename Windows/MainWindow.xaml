            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="38" Content="Выберите уровень" Style="{StaticResource Lb1}" FontSize="48"></Label>
        <Button Click="FirstLvlBtn" Content="1-й уровень" Style="{StaticResource Btn1}" Grid.Row="4" Grid.RowSpan="16" Grid.Column="1" Grid.ColumnSpan="11"></Button>
        <Button IsEnabled="False" Content="2-й уровень" Style="{StaticResource Btn1}" Grid.Row="4" Grid.RowSpan="16" Grid.Column="14" Grid.ColumnSpan="12"></Button>
        <Button IsEnabled="False" Content="3-й уровень" Style="{StaticResource Btn1}" Grid.Row="4" Grid.RowSpan="16" Grid.Column="28" Grid.ColumnSpan="11"></Button>
        <Button Click="ExitBtn" Content="Выйти" Style="{StaticResource Btn1}" Grid.Row="21" Grid.RowSpan="2" Grid.Column="34" Grid.ColumnSpan="5"></Button>
    </Grid>
</Window>
